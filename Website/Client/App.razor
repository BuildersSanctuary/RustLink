<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(Program).Assembly">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
                <NotAuthorized>
                    <StatementText>You have to sign in to access this page</StatementText>
                </NotAuthorized>
                <Authorizing>
                    <Progressbar />
                </Authorizing>
            </AuthorizeRouteView>
        </Found>
        <NotFound>
            <LayoutView Layout="@typeof(MainLayout)">
                <StatementText>There's nothing at this address.</StatementText>
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>